{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@widgets/*": ["src/widgets/*"],
      "@app/*": ["src/app/*"],
      "@features/*": ["src/features/*"],
      "@pages/*": ["src/pages/*"],
      "@entities/*": ["src/entities/*"],
      "@icons/*": ["src/shared/icons/*"]
    }
  },
  "include": ["src"]
}
